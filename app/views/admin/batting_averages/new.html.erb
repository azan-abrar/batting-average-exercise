<div class=" card-body shadow row m-5 text-center justify-content-center">
  <%= form_for [:admin, @batting_average] do |f| %>
    <% if @batting_average.errors.any? %>
      <div>
        <ul>
          <% @batting_average.errors.each do |key, value| %>
            <li>
              <%= "#{key.to_s.humanize} #{value}" %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <div class="form-group clearfix">
        CSV Format should be following:
        <p><b>Player ID, Year ID, Team Id, Hits, At Bats, Stint</b> are expectable columns</p>
        <div class="col-sm-12">
          <h4 class="my-5">Upload Battings Csv</h4>
          <%= f.file_field :csv_file, accept: 'text/csv', required: true, "data-parsley-error-message": "Please enter the title.", class: "" %>
        </div>
      </div>
      <div class="dropdown-divider"></div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= link_to 'Back', admin_batting_averages_path, class: 'btn btn-secondary float-left' %>
          <%= f.submit class: 'btn btn-primary'%>
        </div>
      </div>
  <% end %>
</div>
